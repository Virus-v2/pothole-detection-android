<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar" />

    <style name="AppTheme" parent="AppBaseTheme" />

    <!-- Title bar Text View -->
    <style name="tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="bottom_bar_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_orange_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">middle</item>
    </style>

    <!-- Header Text View -->
    <style name="tv_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/label</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- Text View -->
    <style name="tv_label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/label</item>
    </style>

    <!-- Edit Text -->
    <style name="edit_text">
        <item name="android:background">@drawable/et_border</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/et_text</item>
        <item name="android:textColorHint">@color/et_hint</item>
    </style>

    <!-- Button -->
    <style name="button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/btn_text</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>